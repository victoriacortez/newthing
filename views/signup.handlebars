{{#section 'head'}}
    <link rel="stylesheet" href="/styles/auth.css">
{{/section}}

<h1 div class="title center">Namaste</h1>

<div class="container">
  <form method="POST" action="/signup" class="form-signin">
    <h3 class="form-signin-heading">Create an account</h3>
    
    {{#if errorMessage}}
      <div class="alert alert-danger">
        {{errorMessage}}
      </div>
    {{/if}}


      <div class="input-field">
          <input type="text" id="inputFirstname" name="firstname" class="form-control" placeholder="first name" required autofocus>
        <label for="inputFirstname" class="validate">First name</label>
      </div>
      <div class="input-field">
         <input type="text" id="inputLastname" name="lastname" class="form-control" placeholder="last name" required autofocus>
         <label for="inputLastname" class="validate">Last name</label>
      </div>
      <div class="input-field">
        <input type="text" id="inputBirthday" name="birthday" class="form-control" placeholder="Birthday" required autofocus>
        <label for="inputUsername" class="sr-only">Birthday (optional)</label>
      </div>
      <div class="input-field">
        <input type="text" id="inputEmailaddress" name="emailaddress" class="form-control" placeholder="Email address" required>
        <label for="inputUsername" class="sr-only">Email Address</label>
      </div>
      <div class="input-field">
        <input type="text" id="inputEmailaddress2" name="emailaddress2" class="form-control" placeholder="Repeat Email address" required>
         <label for="inputUsername" class="sr-only">Verify Email Address</label>
      </div>
      <div class="input-field">
        <input type="text" id="inputUsername" name="username" class="form-control" placeholder="Username" required autofocus>
        <label for="inputUsername" class="sr-only">Username</label>
      </div>
      <div class="input-field">
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
      </div>
       <div class="input-field">
        <input type="password" id="inputPassword2" name="password2" class="form-control" placeholder="Repeat Password" required>
        <label for="inputPassword" class="sr-only">Verify Password</label>
      </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
  </form>
</div>

